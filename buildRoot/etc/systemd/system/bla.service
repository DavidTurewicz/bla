[Unit]
Description=Bla blog service
Documentation=https://github.com/mengzhuo/bla
Wants=network.target
After=network.target

[Service]
Type=simple
ExecStart=/root/bin/bla -addr :443 -config /root/blog/config.json -cert /root/blog/certs/fullchain.cer  -key /root/blog/certs/zhuo.blog.key  -accesslog /root/blog/access.log
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
Alias=bla.service
